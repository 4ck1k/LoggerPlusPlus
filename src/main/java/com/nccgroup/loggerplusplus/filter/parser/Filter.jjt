{
    <CONTAINS> {return Operator.CONTAINS;}
}

Operator MatchesOperator() #void :
{}
{
    <MATCHES> {return Operator.MATCHES;}
}

Operator InOperator() #void :
{}
{
    <IN> {return Operator.IN;}
}

boolean Inverse() #void :
{}
{
    <INVERSE> {return true;}
}

BooleanOperator And() #void :
{}
{
